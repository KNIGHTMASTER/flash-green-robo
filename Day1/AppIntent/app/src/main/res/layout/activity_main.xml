<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="id.co.telkomsigma.appintent.MainActivity">

    <Button
        android:id="@+id/btSubAct1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go to Sub Activity 1"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/btSubAct2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go to Sub Activity 2"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/btCallAct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Go to Sub Call Activity"/>

    <Button
        android:id="@+id/btSerialDataAct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go to Serial Data Activity"/>

</LinearLayout>
